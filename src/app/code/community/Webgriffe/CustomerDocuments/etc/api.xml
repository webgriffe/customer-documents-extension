<?xml version="1.0"?>
<config>
    <api>
        <resources>
            <webgriffe_customerdocuments_invoice translate="title" module="webgriffe_customerdocuments">
                <title>Webgriffe Customer Documents - Invoice API</title>
                <model>webgriffe_customerdocuments/invoice_api</model>
                <acl>webgriffe_customerdocuments/invoice</acl>
                <methods>
                    <create translate="title" module="webgriffe_customerdocuments">
                        <title>Create invoice</title>
                        <methods>create</methods>
                    </create>
                </methods>
            </webgriffe_customerdocuments_invoice>
        </resources>
        <faults>
            <fault-400>
                <code>400</code>
                <message>Bad request</message>
            </fault-400>
            <fault-404>
                <code>404</code>
                <message>Not found</message>
            </fault-404>
        </faults>
        <acl>
            <resources>
                <webgriffe_customerdocuments translate="title" module="webgriffe_customerdocuments">
                    <title>Webgriffe Customer Documents</title>
                    <sort_order>1000</sort_order>
                    <invoice translate="title" module="webgriffe_customerdocuments">
                        <title>Invoice data</title>
                    </invoice>
                </webgriffe_customerdocuments>
            </resources>
        </acl>
    </api>
</config>
