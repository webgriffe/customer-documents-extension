<?xml version="1.0"?>
<config>
    <api>
        <resources>
            <webgriffe_customerdocuments_document translate="title" module="webgriffe_customerdocuments">
                <title>Webgriffe Customer Documents - Document API</title>
                <model>webgriffe_customerdocuments/document_api</model>
                <acl>webgriffe_customerdocuments/document</acl>
                <methods>
                    <createForOrder translate="title" module="webgriffe_customerdocuments">
                        <title>Create Document for a given Order</title>
                        <methods>createForOrder</methods>
                    </createForOrder>
                </methods>
            </webgriffe_customerdocuments_document>
        </resources>
        <faults>
            <fault-400>
                <code>400</code>
                <message>Bad request</message>
            </fault-400>
            <fault-404>
                <code>404</code>
                <message>Not found</message>
            </fault-404>
        </faults>
        <acl>
            <resources>
                <webgriffe_customerdocuments translate="title" module="webgriffe_customerdocuments">
                    <title>Webgriffe Customer Documents</title>
                    <sort_order>1000</sort_order>
                    <document translate="title" module="webgriffe_customerdocuments">
                        <title>Document data</title>
                    </document>
                </webgriffe_customerdocuments>
            </resources>
        </acl>
    </api>
</config>
