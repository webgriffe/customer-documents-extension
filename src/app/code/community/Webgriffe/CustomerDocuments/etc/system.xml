<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <sections>
        <customer>
            <groups>
                <documents translate="label">
                    <label>Documents</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>1000</sort_order>
                    <fields>
                        <new_document_email_template translate="label">
                            <label>New Document Email Template</label>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>0</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                        </new_document_email_template>
                        <new_document_email_sender>
                            <label>New Document Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </new_document_email_sender>
                        <new_document_email_copy_to translate="label comment">
                            <label>New Document Email Copy To</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Comma-separated. Copy method is always BCC.</comment>
                        </new_document_email_copy_to>
                    </fields>
                </documents>
            </groups>
        </customer>
    </sections>
</config>
